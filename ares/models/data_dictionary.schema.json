{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "title": "Project Configuration",
  "description": "Schema for validating project configuration JSON.",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_]+$": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "enum": ["in", "inout", "out"]
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "in" } } },
          "then": { "$ref": "#/definitions/in" }
        },
        {
          "if": { "properties": { "type": { "const": "inout" } } },
          "then": { "$ref": "#/definitions/inout" }
        },
        {
          "if": { "properties": { "type": { "const": "out" } } },
          "then": { "$ref": "#/definitions/out" }
        }
      ]
    }
  },
  "additionalProperties": false,

  "definitions": {
    "datatype": {
      "enum": [
        "float", "double", "bool",
        "short", "int", "long", "longlong",
        "uint", "ulong", "ulonglong"
      ]
    },

    "size": {
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "number" },
          { "type": "string" }
        ]
      },
      "minItems": 1
    },

    "input_alternatives": {
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "string" },
          { "type": "number" },
          {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 1
          }
        ]
      }
    },

    "in": {
      "type": "object",
      "properties": {
        "type": { "const": "in" },
        "datatype": { "$ref": "#/definitions/datatype" },
        "size": { "$ref": "#/definitions/size" },
        "input_alternatives": { "$ref": "#/definitions/input_alternatives" }
      },
      "required": ["type", "datatype", "size"],
      "additionalProperties": false
    },

    "inout": {
      "type": "object",
      "properties": {
        "type": { "const": "inout" },
        "datatype": { "$ref": "#/definitions/datatype" },
        "size": { "$ref": "#/definitions/size" },
        "input_alternatives": { "$ref": "#/definitions/input_alternatives" }
      },
      "required": ["type", "datatype", "size"],
      "additionalProperties": false
    },

    "out": {
      "type": "object",
      "properties": {
        "type": { "const": "out" },
        "datatype": { "$ref": "#/definitions/datatype" },
        "size": { "$ref": "#/definitions/size" }
      },
      "required": ["type", "datatype", "size"],
      "additionalProperties": false
    }
  }
}
